{
  "manifest_version": 2,
  "name": "CatTube",
  "version": "1.1.1",
  "description": "This extension redirects YouTube videos to cattube.ir for ad-free viewing with an Iranian IP address.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "CatTube",
    "default_popup": "popup.html"
  },
  "icons": {
    "256": "icons/icon.png"
  },
  "homepage_url": "https://github.com/thenimaaa/CatTube"
}
